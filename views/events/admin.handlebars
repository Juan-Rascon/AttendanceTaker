<body>
{{> nav }}
<h1 class="text-center">Admin</h1>

<h2>Add New Student</h2>
<form action="/api/events" method="POST" >
  <div class="form-group">
    <label for="eventTypeName">Add Student</label>
    <input type="text" name="eventName" class="form-control" id="eventTypeName" aria-describedby="eventName" placeholder="John Doe">
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>
</form>

<h2>Enroll Student in Sections</h2>
<form action="/api/enroll" method="POST">
<div class="form-group d-flex flex-column">
  <select name="student" class="form-select" aria-label="Default select example">
  <option selected>Select Student</option>
   {{#each enrollment.students}}
    <option  value={{this.id}}>{{this.firstName}} {{this.lastName}}</option>
    {{/each}}
</select>
  <select name="section" class="form-select" multiple aria-label="multiple select example">
  {{#each enrollment.sections}}
    <option value={{this.id}}>{{this.SectionName}}</a></li>
  {{/each}}
</select>
<button type="submit" class="btn btn-primary">Enroll</button>
</div>
</form>




{{#if submitted}}
    </br>
    <div class="alert alert-success" role="alert">Student Added Successfully!</div>
    </br>
{{/if}}
